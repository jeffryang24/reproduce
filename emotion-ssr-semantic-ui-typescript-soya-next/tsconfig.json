{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "jsx": "preserve",
      "lib": ["dom", "es2017"],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "paths": {
        "soya-component": ["components/soya-component"],
        "*": ["*"]
      },
      "preserveConstEnums": true,
      "removeComments": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "typeRoots": ["node_modules/@types", "@types"]
    },
    "exclude": ["node_modules", "build", ".next"]
  }
  